@model CIS174_TestCoreApp.Models.FamousPersonViewModel

<div class="container">
    <div class="page-header">
        <h2>Enter a famous person</h2>
    </div>
    <form asp-action="Index" asp-controller="FamousPeople">
        <div class="form-group">
            <label asp-for="FName"></label>
            <input asp-for="FName" class="form-control" />
            <span asp-validation-for="FName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LName"></label>
            <input asp-for="LName" class="form-control" />
            <span asp-validation-for="LName"></span>
        </div>
        <div class="form-group">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" class="form-control" />
            <span asp-validation-for="DOB"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" asp-items="Model.City" class="form-control">
                <input asp-for="City" class="form-control" />
            </label>
        </div>

        <div class="form-group">
            <label asp-for="State" asp-items="Model.State" class="form-control">
                <input asp-for="State" class="form-control" />
            </label>
        </div>
        <div class="form-group">
            <label asp-for="ListOfAccoplishments" asp-items="Model.ListOfAccoplishments" class="form-control">
                <input asp-for="ListOfAccoplishments" class="form-control" />
            </label>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
        <div asp-validation-summary="All"></div>
    </form>
</div>
